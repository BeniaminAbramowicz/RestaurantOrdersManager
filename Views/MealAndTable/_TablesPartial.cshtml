<div class="container meal-container">
    <form onsubmit="addTable(event)" class="new-meal-table-form">
        <label for="table-name">Nazwa stolika</label>
        <input class="form-input" type="text" id="table-name" />
        <input type="submit" class="btn btn-primary" value="Dodaj stolik" />
    </form>
    <table id="table" class="table">
        <thead>
            <tr>
                <td>Nazwa stolika</td>
                <td>Edytuj nazwę stolika</td>
                <td>Usuń Stolik</td>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.TablesList.Count; i++)
            {
                <tr>
                    <td style="display: none"><input type="hidden" value="@Model.TablesList[i].TableId" /></td>
                    <td>@Model.TablesList[i].TableName</td>
                    <td><button class="btn btn-success" onclick="editTable(event)">Edytuj pozycję</button></td>
                    <td><button class="btn btn-danger" onclick="removeTable(event, @Model.TablesList[i].TableId)">Usuń pozycję</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>
@Scripts.Render("~/bundles/tabledisplay");