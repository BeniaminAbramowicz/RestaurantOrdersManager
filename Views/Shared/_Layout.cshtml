<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/mystyles")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="content-container">
        <div class="navbar navbar-inverse navbar-sticky-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Orders list", "Index", "Home")</li>
                        <li>@Html.ActionLink("Create order", "AddOrder", "Order")</li>
                        <li>@Html.ActionLink("Meals and tables", "Index", "MealAndTable")</li>
                    </ul>
                </div>
            </div>
        </div>
        @RenderBody()
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        <footer class="container-fluid w-100 py-2 bg-dark">
            <hr />
            <p class="m-0 text-center text-white">Copyright &copy; 2019 by <a href="https://github.com/BeniaminAbramowicz" class="alert-link" target="_blank">Beniamin Abramowicz</a></p>
        </footer>
    </div>
</body>
</html>